/**
 * @fileoverview Firestore Security Rules for FuelWise application.
 *
 * Core Philosophy:
 * This ruleset allows any authenticated user to read and write data.
 * This is to support multi-user collaboration on the same set of vehicles.
 * Access is restricted to authenticated users only.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Allow any authenticated user to read/write their own user profile.
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to manage vehicles and their sub-collections.
    match /vehicles/{vehicleId} {
      // Any signed-in user can get, create, update, or delete a vehicle document.
      allow get, create, update, delete: if isSignedIn();
      // Allow list for all authenticated users to see all vehicles.
      allow list: if isSignedIn();

      match /fuel_records/{fuelRecordId} {
        // Any signed-in user can perform any action on fuel records.
        allow read, write: if isSignedIn();
      }

      match /service_reminders/{serviceReminderId} {
        // Any signed-in user can perform any action on service reminders.
        allow read, write: if isSignedIn();
      }
    }
    
    // Configuration collections are now top-level and shared.
    match /fuel_types/{fuelTypeId} {
      allow read, write: if isSignedIn();
    }
    match /service_types/{serviceTypeId} {
      allow read, write: if isSignedIn();
    }
    match /gas_stations/{gasStationId} {
      allow read, write: if isSignedIn();
    }
  }
}
